{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist/esm",
    "module": "es2020",
    "target": "es2020",
    "lib": ["dom", "es2020"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "types": [],
    "declaration": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["dist", "node_modules"]
}

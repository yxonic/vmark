{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist/esm",
    "module": "esnext",
    "target": "es2021",
    "lib": ["dom", "es2021"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
